<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BackgorundColor">
        LightSteelBlue
    </Color>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgorundColor}" />

    <SolidColorBrush x:Key="BorderBrush" Color="SkyBlue" />

    <SolidColorBrush x:Key="ForegroundColor" Color="AliceBlue" />

    <SolidColorBrush x:Key="ControlColor" Color="SteelBlue" />

    <SolidColorBrush x:Key="ButtonHover" Color="Black" />

    <SolidColorBrush x:Key="ErrorButtonColor" Color="#FFA24444" />

    <SolidColorBrush x:Key="ErrorPopupBackground" Color="#FF800000" />

    <SolidColorBrush x:Key="DefaultTextBrush" Color="Black" />

    <SolidColorBrush x:Key="ControlsTextBrush" Color="White" />

</ResourceDictionary>